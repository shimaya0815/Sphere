<main>
  <div class='container py-4'>
    <h1><%= @user.email %>'s Dashboard</h1>
    <h2>Your ToDo List</h2>
    <ul class="list-group">
      <% @todos.each do |todo| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= todo.title %>
          <span class="badge badge-primary badge-pill"><%= todo.description %></span>

          <!-- Show, Edit, Destroyのリンクを追加 -->
          <div class="actions">
            <%= link_to 'Show', todo, class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_todo_path(todo), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
    <%= link_to 'View All ToDos', todos_path, class: 'btn btn-primary mt-3' %>
  </div>
</main>
<%= render 'layouts/footer' %>
