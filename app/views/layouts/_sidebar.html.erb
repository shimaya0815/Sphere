<!-- ログインしている場合のみサイドバーを表示 -->
<% if current_user %>
  <div class='col-md-3'>
    <!-- ユーザー情報 -->
    <h2>User Info</h2>
    <table class='table'>
      <tr>
        <th>Email</th>
        <td><%= current_user.email %></td>
      </tr>
      <tr>
        <th>Office ID</th>
        <td><%= current_user.office_id %></td>
      </tr>
      <!-- その他のユーザー情報があればここに追加 -->
    </table>

    <!-- 新しいTodoを追加するフォーム -->
    <h2 class="mt-3">New Todo</h2>
    <%= form_with(model: Todo.new, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <%= form.submit "Create Todo", class: 'btn btn-success' %>
    <% end %>
  </div>
<% end %>
