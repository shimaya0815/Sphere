<!DOCTYPE html>
<html>
<head>
  <title>Sphere</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <%= render 'layouts/header' %>

  <div class="container">
    <div class="row">
      <%= render 'layouts/sidebar' %> <!-- サイドバーをレンダリング -->
      <div class="col-md-9">
        <%= yield %> <!-- メインコンテンツ -->
      </div>
    </div>
  </div>

  <%= render 'layouts/footer' %>
</body>
</html>
