<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h1>Edit ToDo</h1>
        </div>
        <div class="card-body">
          <%= render 'form', todo: @todo %>
          <%= link_to 'Cancel', @todo, class: 'btn btn-secondary' %>
          <%= link_to 'Delete', todo_path(id: @todo.id, office_id: current_user.office_id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
