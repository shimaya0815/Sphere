<div class="container mt-4">
  <h1>Your ToDo List</h1>

  <%= link_to 'New ToDo', new_todo_path, class: 'btn btn-primary mb-3' %>

  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead class="thead-light">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @todos.each do |todo| %>
          <tr>
            <td><%= todo.title %></td>
            <td><%= todo.description %></td>
            <td><%= link_to 'Show', todo, class: 'btn btn-info btn-sm' %></td>
            <td><%= link_to 'Edit', edit_todo_path(todo), class: 'btn btn-warning btn-sm' %></td>
            <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
